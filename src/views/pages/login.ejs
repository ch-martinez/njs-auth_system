<main class="main">
    <section class="wrapper">
        <div class="wrapper__header">
            <h1 class="wrapper__title">Bienvenido a LogPanel</h1>
            <p class="wrapper__subtitle">Tu panel de administracion</p>
        </div>
        <form class="wrapper__body" action="/auth" method="post" id="form">
            <div class="row row--input">
                <label for="user">Usuario</label>
                <input class="input" type="text" name="user" id="user">
            </div>
            <div class="row row--input">
                <label for="pwd">Contraseña</label>
                <input class="input" type="password" name="pwd" id="pwd">
            </div>
            <div class="row">
                <label for="remember">
                    <input class="input" type="checkbox" name="remember" id="remember">
                    Recordar
                </label>
                <a class="link" href="/forgot-password">Olvidé mi contraseña</a>
            </div>
            <div class="row">
                <button class="button" type="submit">Acceder</button>

            </div>

        </form>
        <div class="wrapper__footer">
            <div class="row row--center">
                <span>
                    ¿No tenés cuenta? <a class="link" href="/register">Registrate</a>
                </span>
            </div>
        </div>
    </section>
</main>